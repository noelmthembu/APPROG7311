@page
@model APPROG7311.Pages.MonetrayModel
@{
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link rel="stylesheet" href="~/css/StyleSheet.css">
<script src="~/js/site.js"></script>


<div class="card">
    <div class="card p-4 mt-5 bg-secondary">
        <div class="row g-3">
            <div class="col-12 mb-4">
                <h2 class="card-title mt-3 text-center"><b>Monetray Donations</b></h2>
               
            </div>

            @if (Model.errorMessage.Length > 0)
            {
                <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                    <strong>@Model.errorMessage</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            }

        <form method="post" class="form-group">
            <!-- Anoymous -->
            <div class="col-sm-3 my-1">
                <label class="mr-sm-2" for="inlineFormCustomSelect">Identity</label>
                <select class="custom-select mr-sm-2" id="IS_CHECKED" name="IS_CHECKED">
                    <option selected>Choose...</option>
                    <option value="Known">Known</option>
                    <option value="Anonymous">Anonymous</option>

                </select>
            </div>

            <div class="form-group col-sm-3 my-1">
                <label class="mr-sm-2" for="Number of Items">Amount</label>
                <input type="number" name="AMOUNT" required id="currency-field" pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$" value="@Model.monetrayInfo.AMOUNT" placeholder="R1,000,000.00">

            </div>

            <div class="form-group my-1 col-sm-3">
                <label class="mr-sm-2" for="Number of Items">Start Date</label>
                    <input type="date" value="@Model.monetrayInfo.START_DATE" name="START_DATE" class="form-control" placeholder="StartDate">
            </div>

            <div class="form-group my-1 col-sm-3">
                <label class="mr-sm-2" for="Number of Items">End Date</label>
                    <input type="date" value="@Model.monetrayInfo.END_DATE" name="END_DATE" class="form-control" placeholder="EndDate">

            </div>
            <div class="col-12 mt-4">
                <a class="btn btn-secondary text-uppercase" asp-page="/Donate">Back</a>
                <button class="btn btn-primary text-uppercase" value="Submit">Submit</button>
            </div>
        </form>
        </div>
    </div>
</div>